{
  "name": "git-tools",
  "version": "1.0.0",
  "description": "Custom Git tools built with TypeScript and Bun",
  "type": "module",
  "scripts": {
    "build": "bun build ./who.ts --compile --outfile who && bun build ./tags.ts --compile --outfile tags",
    "build:who": "bun build ./who.ts --compile --outfile who",
    "build:tags": "bun build ./tags.ts --compile --outfile tags",
    "dev:who": "bun who.ts",
    "dev:tags": "bun tags.ts"
  },
  "dependencies": {
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.11",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.6",
    "@types/node": "^20.8.6",
    "bun-types": "latest",
    "typescript": "^5.2.2"
  }
}
